@model CYBInfrastructure.Web.Models.InventoryListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Virtual Machine</h4>
                <p class="text-muted font-13 mb-4">
                    List of Virtual Machines
                </p>
                <p class="text-muted font-13 mb-4">
                    <a class="btn btn-primary" style=" margin-bottom:10px" href="/VirtualMachine/Create"><i class="fa fa-plus"></i> Add New</a>


                </p>
                <p class="col-md-offset-0">
                    @Html.ActionLink("Export To Excel", "Export", "VirtualMachine", new { @class = "btn btn-success" })
                    @*@Html.ActionLink("Export to Pdf", "Pdf", "Location", new { @class = "btn btn-primary" })*@
                </p>


                @*@if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage" fade >@TempData["Success"]</p>
        }*@
                <table id="basic-datatable" class="table dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Server Name</th>
                            <th>Primary IP</th>
                            <th>Secondary IP</th>
                            <th>Date</th>

                            <th>Description</th>
                            <th>Location</th>
                            <th>Unit</th>
                            <th>VLAN</th>
                            <th>Gatway</th>
                            <th>Environment</th>
                            <th>Host Name</th>

                            <th> Action </th>



                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Inventories)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServerName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PrimaryIP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SecondaryIP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.LocationName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit.UnitName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VLAN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gateway)
                            </td>
                            @*<td>
            @Html.DisplayFor(modelItem => item.ServerType)
        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Environment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Host.HostName)
                            </td>
                            @*<td>
        @Html.DisplayFor(modelItem => item.Department.Location.LocationName)
                     </td>*@
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = " margin-bottom:10px" })
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success", @style = " margin-bottom:10px" })*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = " margin-bottom:10px" })
                            </td>

                        </tr>

                        }



                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

