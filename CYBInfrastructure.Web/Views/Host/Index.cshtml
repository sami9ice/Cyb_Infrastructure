@model CYBInfrastructure.Web.Models.HostListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<h2>Manage Host</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Host</h4>
                <p class="text-muted font-13 mb-4">
                    Host Set-Up
                </p>
                <p class="text-muted font-13 mb-4">
                    <a class="btn btn-primary" style=" margin-bottom:10px" href="/Host/Create"><i class="fa fa-plus"></i> Add New</a>

                </p>

                <p>
                    @Html.ActionLink("Export To Excel", "Export", "Host", new { @class = "btn btn-success" })
                    @*@Html.ActionLink("Export to Pdf", "Pdf", "Department", new { @class = "btn btn-success" })*@
                </p>


                <table id="basic-datatable" class="table dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Host Name</th>
                            <th>IP Address</th>
                            <th> Date Created</th>
                            <th>CPU</th>
                            <th>RAM</th>
                            <th>Disk Space</th>
                            <th>Operating System</th>
                            <th>Hypervisor</th>
                            <th> Action </th>





                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Hosts)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HostName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IpAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RAM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiskSpace)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OperatingSystem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hypervisor)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })
                                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })*@
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                                </td>

                            </tr>


                        }



                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/scripts/toastr.js"></script>
