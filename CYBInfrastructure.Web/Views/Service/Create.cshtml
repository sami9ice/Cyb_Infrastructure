@model CYBInfrastructure.Web.Models.ServiceViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<h1>Add Service </h1>

@using (Html.BeginForm("Create", "Service", FormMethod.Post, new { onsubmit = "return SubmitForm(t  his)" }))
{
<div>
    @Html.HiddenFor(model => model.Id)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-6"> Service Name</label>

        <div class="col-md-3">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Date </label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-6"> Description</label>

        <div class="col-md-3">
            @Html.TextAreaFor(e => e.Description, 5, 50, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-6"> Port Number</label>

        <div class="col-md-3">
            @Html.EditorFor(model => model.Port, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-6"> Url</label>

        <div class="col-md-3">
            @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-6"> Server</label>
        <div class="col-md-3">
            <select name="InventoryId" class="form-control">
                <option>Select Sever Name</option>
                @foreach (var item in Model.Inventories)
                {
                    @*<option id="@item.Id" value="@item.Id">@item.ServerName</option>*@
                    <option id="@item.Id" value="@item.Id">@item.ServerName</option>


                }
            </select>
            @Html.ValidationMessageFor(model => model.Inventories, "", new { @class = "text-danger" })


        </div>
    </div>

    <div class="form-group">
        <label class=" col-md-0"> Is Active?</label>
        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @*@class = "form-control"*@@class = "  control-label col-md-offset-12"
    }
})
        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <div class="col-md-6">

            <input type="submit" value="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want Add?')" />
        </div>
    </div>
</div>
 }
<div class="col-md-6">

    @Html.ActionLink("Back to List", "Index")
</div>

