@model CYBInfrastructure.Web.Models.UnitListViewModel
@{
    ViewBag.Title = "Unit Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<h2>Manage Unit</h2>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Unit</h4>
                <p class="text-muted font-13 mb-4">
                    List of Unit
                </p>
                <p class="text-muted font-13 mb-4">
                    <a class="btn btn-primary" style=" margin-bottom:10px" href="/Unit/Create"><i class="fa fa-plus"></i> Add New</a>


                </p>
                <p>
                    @Html.ActionLink("Export To Excel", "Export", "Unit", new { @class = "btn btn-success" })
                    @*@Html.ActionLink("Export to Pdf", "Pdf", "Unit", new { @class = "btn btn-primary" })*@
                </p>

                <table id="basic-datatable" class="table dt-responsive nowrap">
                    <thead>
                        <tr>
                            
                                <th>Name of Unit</th>
                                <th>Date Created</th>
                                <th>Department</th>
                                <th>Location</th>
                                <th>Action</th>
                            



                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Units)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location.LocationName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = " margin-bottom:10px" })
                                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success", @style = " margin-bottom:10px" })*@
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = " margin-bottom:10px" })
                                </td>

                            </tr>

                        }



                    </tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
<!-- end row-->
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/scripts/toastr.js"></script>
